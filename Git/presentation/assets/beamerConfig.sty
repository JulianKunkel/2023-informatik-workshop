% FULL PAGE IMAGE

\newcommand{\fullPageImage}[2]{
	\begin{frame}
		\frametitle{#1}
		\newgeometry{textwidth=12.65cm}
		\vspace*{-0.4cm}
		\hspace*{-1.05cm}
		\begin{minipage}{\textwidth}
			
			\begin{figure}
				#2
			\end{figure}
		\end{minipage}
		\restoregeometry
	\end{frame}
}

